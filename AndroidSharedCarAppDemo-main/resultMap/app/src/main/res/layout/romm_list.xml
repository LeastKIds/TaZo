<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/roomList">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:orientation="vertical">

        <TextView
            android:id="@+id/roomTitle"
            android:layout_width="300px"
            android:layout_height="50px"
            android:text="방제목 : zzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzz"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/roomLeftUser"
            android:layout_width="300px"
            android:layout_height="50px"
            android:text="남은 인원"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@+id/roomTitle"
            tools:layout_editor_absoluteY="0dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:text="성별 제한"
            android:id="@+id/roomGender"
            android:textColor="#000000"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/roomTime"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:text="만나는 시간"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@+id/roomGender"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/roomPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="출발지 / 도착지"
        android:textColor="#000000" />


</LinearLayout>